program doubletest;

var
    number1 : double = 2.44;
    number2 : double = 3.55;

begin 

    if number1 = 2.44 then
        writeln('number1 = ',number1);

    writeln('number1 + number2 = ', number1 + number2);
    writeln('number1 - number2 = ', number1 - number2);
    writeln('number1 * number2 = ', number1 * number2);
    writeln('number1 / number2 = ', number1 / number2);

end.